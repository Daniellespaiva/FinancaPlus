<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancaPlus.Views.AdicionarDespesas"
             BackgroundColor="#F5F5F5"
             Title="Minhas Despesas">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Título -->
            <Label Text="Adicionar Nova Despesa"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10" />

            <!-- Campo de Nome da Despesa -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="5" BackgroundColor="White">
                <Entry x:Name="EntryNomeDespesa" Placeholder="Nome da Despesa" FontSize="16"/>
            </Frame>

            <!-- Campo de Valor -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="5" BackgroundColor="White">
                <Entry x:Name="EntryValorDespesa" Placeholder="Valor (R$)" Keyboard="Numeric" FontSize="16"/>
            </Frame>

            <!-- Seletor de Categoria -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="5" BackgroundColor="White">
                <Picker x:Name="PickerCategoria" Title="Escolha uma categoria">
                    <Picker.Items>
                        <x:String>Moradia</x:String>
                        <x:String>Alimentação</x:String>
                        <x:String>Transporte</x:String>
                        <x:String>Saúde</x:String>
                        <x:String>Educação</x:String>
                        <x:String>Outros</x:String>
                    </Picker.Items>
                </Picker>
            </Frame>

            <!-- Seletor de Data -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="5" BackgroundColor="White">
                <DatePicker x:Name="PickerDataDespesa" Format="dd/MM/yyyy" />
            </Frame>

            <!-- Botão para adicionar despesa -->
            <Button Text="Adicionar Despesa"
                    x:Name="BTN_AdicionarDespesa"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="20"
                    Padding="10"
                    Clicked="BTN_AdicionarDespesa_Clicked"/>

            <!-- Lista de despesas cadastradas -->
            <Label Text="Minhas Despesas"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <CollectionView x:Name="DespesasListView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" BorderColor="LightGray" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nome}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Valor, StringFormat='R$ {0:N2}'}" FontSize="16"/>
                                <Label Text="{Binding Categoria}" FontSize="14" TextColor="Gray"/>
                                <Label Text="{Binding Data, StringFormat='{0:dd/MM/yyyy}'}" FontSize="14" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>