<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancaPlus.Views.AdicionarDespesas"
             BackgroundColor="#F5F5F5"
             Title="Minhas Despesas">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Título -->
            <Label Text="Adicionar Nova Despesa"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10" />

            <!-- Campo de Nome da Despesa -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="5" BackgroundColor="White">
                <Entry Text="{Binding NomeDespesa}" Placeholder="Nome da Despesa" FontSize="16"/>
            </Frame>

            <Frame BorderColor="LightGray" CornerRadius="10" Padding="5" BackgroundColor="White">
                <Entry Text="{Binding ValorDespesa}" Placeholder="Valor (R$)" Keyboard="Numeric" FontSize="16"/>
            </Frame>

            <Frame BorderColor="LightGray" CornerRadius="10" Padding="5" BackgroundColor="White">
                <Picker SelectedItem="{Binding CategoriaSelecionada}" Title="Escolha uma categoria">
                    <Picker.Items>
                        <x:String>Moradia</x:String>
                        <x:String>Alimentação</x:String>
                        <x:String>Transporte</x:String>
                        <x:String>Saúde</x:String>
                        <x:String>Educação</x:String>
                        <x:String>Outros</x:String>
                    </Picker.Items>
                </Picker>
            </Frame>



            <!-- Seletor de Data -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="5" BackgroundColor="White">
                <DatePicker x:Name="PickerDataDespesa" Format="dd/MM/yyyy" />
            </Frame>

            <!-- Botão para adicionar despesa -->
            <Button Text="Adicionar Despesa"
                    x:Name="BTN_AdicionarDespesa"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="20"
                    Padding="10"
                    Clicked="BTN_AdicionarDespesa_Clicked"/>

            <!-- Seção de gerenciamento de saldo e histórico -->
            <Label Text="Gerenciar Saldo e Histórico"
        FontSize="20"
        FontAttributes="Bold"
        HorizontalOptions="Center"
        Margin="20,10,0,10"/>

            <Border Stroke="LightGray" StrokeShape="RoundRectangle10" Padding="5" BackgroundColor="White">
                <Picker x:Name="PickerCategoriaReset" Title="Escolha uma categoria para resetar saldo">
                    <Picker.Items>
                        <x:String>Moradia</x:String>
                        <x:String>Alimentação</x:String>
                        <x:String>Transporte</x:String>
                        <x:String>Saúde</x:String>
                        <x:String>Educação</x:String>
                        <x:String>Outros</x:String>
                    </Picker.Items>
                </Picker>
            </Border>

            <Button Text="Resetar Saldo por Categoria"
         x:Name="BTN_ResetarSaldoCategoria"
         BackgroundColor="Orange"
         TextColor="White"
         FontSize="18"
         CornerRadius="20"
         Padding="10"
         Clicked="BTN_ResetarSaldoCategoria_Clicked"/>

            <Border Stroke="LightGray" StrokeShape="RoundRectangle10" Padding="5" BackgroundColor="White">
                <Picker x:Name="PickerCategoriaExcluir" Title="Escolha uma categoria para excluir">
                    <Picker.Items>
                        <x:String>Salário</x:String>
                        <x:String>Freelance</x:String>
                        <x:String>Investimentos</x:String>
                        <x:String>Outros</x:String>
                    </Picker.Items>
                </Picker>
            </Border>

            <Button Text="Apagar Histórico por Categoria"
         x:Name="BTN_ApagarHistoricoCategoria"
         BackgroundColor="Red"
         TextColor="White"
         FontSize="18"
         CornerRadius="20"
         Padding="10"
         Clicked="BTN_ApagarHistoricoCategoria_Clicked"/>

            <!-- Lista de despesas cadastradas -->
            <Label Text="Minhas Despesas"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <CollectionView x:Name="DespesaListView" BackgroundColor="#F0F0F5">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" CornerRadius="10" Padding="10" BorderColor="LightGray" HasShadow="True">
                            <HorizontalStackLayout Spacing="10">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Nome}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Valor, StringFormat='R$ {0:N2}'}" FontSize="16"/>
                                <Label Text="{Binding Categoria}" FontSize="14" TextColor="Gray"/>
                                <Label Text="{Binding Data, StringFormat='{0:dd/MM/yyyy}'}" FontSize="14" TextColor="Gray"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>