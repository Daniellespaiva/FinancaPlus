<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancaPlus.Views.ConfiguracaoPage"
             BackgroundColor="#F5F5F5"
             Title="Configurações">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Título -->
            <Label Text="Configurações da Conta"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10"/>

            

            <!-- Botão para trocar senha -->
            <Button Text="Trocar Senha"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                    Clicked="BTN_trocarSenha_Clicked"/>


            <!-- Botão de Logout -->
            <Button Text="Sair da Conta"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="20"
                    Clicked="BTN_logout_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>