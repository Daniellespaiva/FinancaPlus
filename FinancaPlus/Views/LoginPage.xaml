<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancaPlus.Views.LoginPage"
             BackgroundColor="WhiteSmoke"
             NavigationPage.HasNavigationBar="False"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="20">
        <!-- Logo -->
        <Image Source="logo_f.png"
               HeightRequest="100"
               HorizontalOptions="Center"/>

        <Label Text="FinançaPlus"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <Label Text="Controle financeiro inteligente"
               FontSize="16"
               HorizontalOptions="Center"/>

        <!-- Campos de Login -->
        <Entry x:Name="txt_email"
               Placeholder="Email"
               Keyboard="Email"
               Margin="0,10,0,0"/>

        <Entry x:Name="txt_senha"
               Placeholder="Senha"
               IsPassword="True"/>

        <!-- Botão de Login -->
        <Button x:Name="BTN_Entrar"
                Text="ENTRAR"
                BackgroundColor="Green"
                TextColor="White"
                Clicked="BTN_Entrar_Clicked"/>

        <!-- Recuperação de Senha -->
        <Button x:Name="BTN_RecuperarSenha"
         Text="Esqueci minha senha"
         BackgroundColor="Transparent"
         TextColor="Red"
         Clicked="BTN_RecuperarSenha_Clicked"/>

        <!-- Cadastro -->
        <Label Text="Não tem uma conta?"
               HorizontalOptions="Center"/>
        <Button x:Name="BTN_Registrar"
                Text="CADASTRE-SE"
                BackgroundColor="Transparent"
                TextColor="Blue"
                Clicked="BTN_Registrar_Clicked"/>


    </VerticalStackLayout>
</ContentPage>

      
                


       
                

