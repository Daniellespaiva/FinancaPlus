        </Frame>

        <!-- InformaÃ§Ãµes Financeiras em uma Ãšnica Frame -->
        <Frame Grid.Row="1" Padding="10" BackgroundColor="LightGray" CornerRadius="10" Margin="5">
            <VerticalStackLayout Spacing="10">

