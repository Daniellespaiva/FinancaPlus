            </VerticalStackLayout>
        </Frame>

        <!-- SeÃ§Ã£o de TransaÃ§Ãµes Recentes -->
        <Frame Grid.Row="4" Padding="10" BackgroundColor="White" CornerRadius="10" Margin="5">
            <VerticalStackLayout>
                <Label Text="TransaÃ§Ãµes Recentes" FontSize="18" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
                <CollectionView ItemsSource="{Binding TransacoesRecentes}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Descricao}" FontSize="16"/>
                                <Label Text="{Binding Valor, StringFormat='R$ {0:N2}'}" FontSize="16" TextColor="{Binding CorValor}"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>




